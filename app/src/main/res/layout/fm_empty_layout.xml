<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_empty_layout"
    android:layout_width="@dimen/w235"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fm_empty_img"
        android:layout_width="@dimen/w235"
        android:layout_height="@dimen/h214"
        android:src="@drawable/exp_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fm_empty_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h20"
        android:text="文件夹是空的"
        android:textColor="@android:color/white"
        android:textSize="@dimen/w36" />

</RelativeLayout>

