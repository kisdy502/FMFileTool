<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/w454"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/menu_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/w40"
            android:gravity="right"
            android:paddingVertical="@dimen/h24"
            android:text="菜单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/w40" />

        <View
            android:id="@+id/split"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_below="@+id/title"
            android:background="@android:color/white" />

        <cn.fengmang.libui.recycler.FMRecyclerView
            android:id="@+id/optList"
            android:layout_width="@dimen/w836"
            android:layout_height="match_parent"
            android:layout_below="@+id/split"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/h116"
            android:paddingHorizontal="@dimen/w14"
            app:itemSpaceHorizontal="@dimen/w18"
            app:itemSpaceVertical="@dimen/h8" />

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

    </RelativeLayout>


</RelativeLayout>
