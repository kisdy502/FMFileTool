<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w372"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_height="@dimen/h100">

    <ImageView
        android:id="@+id/optIcon"
        android:layout_width="@dimen/w72"
        android:layout_height="@dimen/h72"
        android:layout_marginLeft="@dimen/w16"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/copy" />

    <TextView
        android:id="@+id/optName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/w16"
        android:layout_centerVertical="true"
        android:text="复制"
        android:textColor="@android:color/white"
        android:textSize="@dimen/w38" />

</RelativeLayout>
