<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w420"
    android:layout_height="@dimen/h700"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/orange"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/w144"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h36"
        android:src="@drawable/main_apk"
        android:layout_height="@dimen/h144" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_icon"
        android:layout_marginTop="@dimen/h18"
        android:layout_centerHorizontal="true"
        android:text="所有文件"
        android:textSize="@dimen/w36" />

</RelativeLayout>
